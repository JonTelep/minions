# ðŸ¤– Minions Configuration

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_PASSWORD=postgres
CONTAINER_NAME=minions-postgres

# ======================
# Agent Configuration
# ======================

# Default model for agent execution
DEFAULT_MODEL=anthropic/claude-sonnet-4-20250514

# Agent execution timeout (seconds)
AGENT_TIMEOUT=300

# Maximum parallel agents per phase  
MAX_PARALLEL_AGENTS=5

# ======================
# Performance Tuning
# ======================

# PostgreSQL connection pool size
DB_POOL_SIZE=10

# Agent response cache TTL (seconds)
CACHE_TTL=3600

# Maximum task prompt length (characters)
MAX_PROMPT_LENGTH=8000

# ======================
# Security Settings
# ======================

# Enable task sanitization
SANITIZE_TASKS=true

# Enable output validation
VALIDATE_OUTPUTS=true

# Enable audit logging
AUDIT_LOGGING=true

# ======================
# Development Settings  
# ======================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed execution logging
DEBUG_EXECUTION=false

# Enable performance metrics
METRICS_ENABLED=false

# ======================
# OpenClaw Integration
# ======================

# OpenClaw function integration mode
OPENCLAW_INTEGRATION=true

# Agent cleanup policy (keep, delete)
AGENT_CLEANUP=delete

# ======================
# Container Settings
# ======================

# Podman image name
IMAGE_NAME=minions

# Network mode (host, bridge)
NETWORK_MODE=host

# Data volume name
DATA_VOLUME=minions-data